---

/* plantilla de cabezal de html (apertura y cierre de etiqueta html ) */
import MainLayout from '../layouts/MainLayout.astro';

/* titulo de la pagina principal: */
const title = 'Pokemon app creada por Danlois';

/* inportar interfaces */
import type {PokemonListResponse} from '../interfaces/pokemonInterfacesListResponse';

/* conexion a la api: */
const response = await fetch('https://pokeapi.co/api/v2/pokemon/?offset=20&limit=102');
const data = await response.json() as PokemonListResponse;

/* importar componetes */
import PokemonCard from '../components/Pokemons/PokemonCard.astro';

---

<MainLayout title={title}>
<div class="container px-4 md:px-8 lg:px-16">
	
	
	<section aria-label="Listado de pokemons" class="grid grid-cols-1  sm:grid-cols-3  md:grid-cols-3 lg:grid-cols-6 gap-4 pt-[50px]">

		{
            data.results.map(({url,name}) => (
                <PokemonCard 
                    name={name}
                    url={url}  
                />
            ))
        }

	</section>
	

</div>
	
</MainLayout>
