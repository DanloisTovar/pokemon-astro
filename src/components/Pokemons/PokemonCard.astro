---

/* props de la api */
interface Props {
	url: string;
	name: string;
	
}

const {url, name} :Props = Astro.props;

/* obtener el id para pokemon */
const id = url.split('/').at(-2);

/* agregar */
const urlImage = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`;

---

<div class="bg-slate-500 rounded-lg shadow-lg p-4">
	<h2 class="text-xl font-bold text-center">{name}</h2>
	<img class="w-32 h-32 mx-auto" src={urlImage} alt={name}/>
	
</div>

